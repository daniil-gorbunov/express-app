extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        div
          form.form-horizontal(action='/login', method='POST')
            input.form-control.form-group(type='text', name='username', placeholder='Email', required, autofocus)
            input.form-control.form-group(type='password', name='password', placeholder='Password', required)
            button.btn.btn-lg.btn-primary.btn-block.form-group(type='submit') Sign in
            span.clearfix
        a.text-center(href='/signup') Create an account
        if message
          h1.text-center #{message}
