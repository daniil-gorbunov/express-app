extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        form.form-horizontal(action='/signup', method='POST')
          input.form-control.form-group(type='text', name='username', placeholder='Username', required, autofocus)
          input.form-control.form-group(type='password', name='password', placeholder='Password', required)
          input.form-control.form-group(type='email', name='email', placeholder='Email', required)
          button.btn.btn-lg.btn-primary.btn-block.form-group(type='submit') Register
          span.clearfix
        if message
          h1.text-center #{message}
